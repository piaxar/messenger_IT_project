<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape>
        <stroke android:width="1dp" android:color="@color/textColorPrimaryLight" />
        <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

        <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />

    </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/textColorHintLight" />
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />

        </shape>
    </item>
</selector>